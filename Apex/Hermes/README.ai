HERMES_RATE_LIMIT_PER_HOUR=1000

# Logging Configuration
HERMES_LOGGING_ENABLED=true
HERMES_LOG_CHANNEL=hermes
HERMES_LOG_MESSAGE_CONTENT=false
HERMES_LOG_RETENTION_DAYS=30

# Provider Specific
